
<div class="cl-10 hidden-xs"></div>

<%# Displays to Manage the items %>
<div class="row mb-10">
  <div class="fs-22 col-sm-6 hidden-xs">Manage Product Details</div>
  <div class="fs-22 col-sm-6 text-align-center visible-xs">Manage Product Details</div>
  <div id="div_product_detail_filters" class="col-sm-6 hidden-xs">
    <%= render :partial=>"filters" %>
  </div>
</div>

<div class="cl-10 hidden-xs"></div>

<%# Renders a partial to display all the health tips %>
<div class="row">
  <div id="div_product_detail_index" class="col-sm-6 hidden-xs">
    <%= render :partial=>"index" %>
  </div>
  <div id="div_product_detail_drop_down" class="col-xs-12 visible-xs">
    <%= render :partial=>"drop_down" %>
  </div>

  <div id="product_detail_details" class="col-xs-12 col-sm-6">
    <% case params[:action] %>
    <% when "new", "edit", "show" %>
      <%= render :partial=>params[:action] %>
    <% when "index" %>
      <% if @product_details.empty? %>
        <%= render :partial=>"summary" %>
      <% else %>
        <%= render :partial=>"show" %>
      <% end %>
    <% else %>
      <%= render :partial=>"summary" %>
    <% end %>
  </div>

</div>


