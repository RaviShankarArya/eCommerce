<%# Displays list of @product_details %>
<div id="div_product_detail_collections">
  <% @product_details.each do |product_detail| %>
      <div id="div_product_detail_<%= product_detail.id %>">
        <%= render :partial=>"item", :locals=>{ :product_detail => product_detail } %>
      </div>
  <% end %>
  <% if @product_details.blank? %>
    <div id="div_product_detail_empty" class="box text-color-grey p-80 text-align-center" style="height:200px;">
      <%= translate("forms.no_results_found") %>
    </div>
  <% end %>
</div>
<div class="cl"></div>

<% if @product_details.any? %>
   <%= content_tag :div, :class=>"pull-right" do %>
     <%= paginate @product_details, :remote => true %>
   <% end %>
<% end %>
<div class="cl"></div>