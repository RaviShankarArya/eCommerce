<% if @product_details.any? %>

  // Fill the right box with first health tip details in the list
  $('#div_product_detail_details').html("<%= escape_javascript(render(:partial=>'show')) %>");

  // Rendering the item list
  $('#div_product_detail_index').html("<%= escape_javascript(render(:partial=>"index")) %>");
  $('#div_product_detail_drop_down').html("<%= escape_javascript(render(:partial=>"drop_down")) %>");

<% else %>

  var noResultsText = "<div id=\"div_product_detail_empty\" class=\"box text-color-grey p-80 text-align-center\" style=\"height:200px;\"><%= translate("forms.no_results_found") %></div>";
  $('#div_product_detail_index').html(noResultsText);
  $('#div_product_detail_details').html(noResultsText);

<% end %>
