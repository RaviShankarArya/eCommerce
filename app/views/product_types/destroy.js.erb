<% if @product_type %>
  <% if @product_type.new_record? %>

    // Fill the right box with first health_tip details
    $('#div_product_type_details').html("<%= escape_javascript(render(:partial=>'summary')) %>");

  <% else %>

    // Render the show partial to show flash message
    $('#div_product_type_details').html("<%= escape_javascript(render(:partial=>'show')) %>");

  <% end %>

  // Render health tips List
  $('#div_product_type_collections').html("<%= escape_javascript(render(:partial=>'index')) %>");

<% else %>

  var noResultsText = "<div id=\"div_product_type_empty\" class=\"box text-color-grey p-80 text-align-center\" style=\"height:200px;\"><%= translate("forms.no_results_found") %></div>";
  $('#div_product_type_index').html(noResultsText);
  $('#div_product_type_details').html(noResultsText);

<% end %>
