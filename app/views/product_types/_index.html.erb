<%# Displays list of @health_tips %>
<div id="div_product_type_collections">
  <% @product_types.each do |product_type| %>
      <div id="div_product_type_<%= product_type.id %>">
        <%= render :partial=>"item", :locals=>{ :product_type => product_type } %>
      </div>
  <% end %>
  <% if @product_types.blank? %>
    <div id="div_product_type_empty" class="box text-color-grey p-80 text-align-center" style="height:200px;">
      <%= translate("forms.no_results_found") %>
    </div>
  <% end %>
</div>
<div class="cl"></div>

<% if @product_types.any? %>
   <%= content_tag :div, :class=>"pull-right" do %>
     <%= paginate @product_types, :remote => true %>
   <% end %>
<% end %>
<div class="cl"></div>