
<%# Renders a partial which is used to create a new health_tip %>

<%= form_for(@product_category, :html => {:id=>"form_product_category", :multipart => true, :class=>"mb-0 form-horizontal", :role => "form", :method => (@product_category.new_record? ? :post : :put), :remote=>true}) do |f| %>

  <div class="modal-body">

    <%= @product_category.errors[:base].to_sentence %>

    <%= hidden_field_tag :faction, @product_category.new_record? ? product_categories_path : product_categories_path(@product_category) %>
    <%= hidden_field_tag :fmethod, @product_category.new_record? ? "POST" : "PUT" %>

    <div class="form-inputs">

      <!-- Title (string) -->
      <%= render :partial=>"field", :locals=>{:object=>@product_category,
                                              :object_name=>'product_category',
                                              :field_name=>'product_name',
                                              :display_name=>'Product Name',
                                              :field_type=>'string',
                                              :input_type=>'text',
                                              :required=>true,
                                              :place_holder=>"e.g: Put a suitable example here."} %>



    </div>
  </div>

  <div class="modal-footer">

    <div class="pull-right">
      <% button_text = "#{@product_category.new_record? ? "Create" : "Update"} Product Category" %>
     <%= link_to 'Cancel', product_categories_path, :class => "btn btn-default" %>
      <%= submit_tag button_text, "data-reset-text"=>button_text, "data-loading-text"=>"Saving ...", :class=>"btn btn-primary ml-10 staff_warning" %>
    </div>

  </div>

	<div class="cl-10"></div>

<% end %>

