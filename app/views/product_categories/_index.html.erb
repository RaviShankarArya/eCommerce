
<%# Displays list of @health_tips %>
<div id="div_product_category_collections">
	<% @product_categories.each do |product_category| %>
  		<div id="div_product_category_<%= product_category.id %>">
  			<%= render :partial=>"item", :locals=>{ :product_category => product_category } %>
  		</div>
	<% end %>
	<% if @product_categories.blank? %>
		<div id="div_product_category_empty" class="box text-color-grey p-80 text-align-center" style="height:200px;">
      <%= translate("forms.no_results_found") %>
		</div>
	<% end %>
</div>
<div class="cl"></div>

<% if @product_categories.any? %>
   <%= content_tag :div, :class=>"pull-right" do %>
     <%= paginate @product_categories, :remote => true %>
   <% end %>
<% end %>
<div class="cl"></div>
