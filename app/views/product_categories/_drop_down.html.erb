<div class="btn-group mt-10 mb-10" style="width:100%;">
  <button type="button" class="btn btn-default btn-block dropdown-toggle" data-toggle="dropdown">
    Choose a Product Category <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" role="menu">
    <% @product_categories.each do |product_category| %>
      <li><%= link_to product_category.product_name, product_category_path(product_category), :remote=>true %></li>
    <% end %>
    <%= content_tag :li, link_to_next_page(@product_categories, 'Next Page', :remote => true) %>
    <%= content_tag :li, link_to_previous_page(@product_categories, 'Previous Page', :remote => true) %>
  </ul>
</div>